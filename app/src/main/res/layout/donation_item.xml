<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardPreventCornerOverlap="true"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/hospital_card"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/donations_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_donaton_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Mombasa Hospital"
                />

            <TextView
                android:id="@+id/tv_county_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_donaton_date"
                android:layout_alignStart="@id/tv_donaton_date"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="Mombasa County" />

            <TextView
                android:id="@+id/tv_hospital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_county_name"
                android:layout_alignStart="@id/tv_donaton_date"
                android:layout_alignEnd="@id/tv_donaton_date"
                android:layout_marginBottom="4dp"
                android:text="iownoifnwoienfown" />

            <TextView
                android:id="@+id/tv_amount_donated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_hospital_name"
                android:layout_alignStart="@id/tv_hospital_name"
                android:layout_marginBottom="8dp"
                android:text="250 mls" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>