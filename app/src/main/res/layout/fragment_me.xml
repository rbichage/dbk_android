<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/donor_refresh"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:elevation="10dp"
            android:layout_marginTop="16dp"
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile_header"
            tools:ignore="ContentDescription" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/header_cover_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-46dp"
                android:elevation="10dp"
                android:src="@drawable/ic_launcher"
                app:civ_border_color="@color/md_white_1000"
                app:civ_border_width="1dp"
                app:civ_circle_background_color="@color/md_black_1000"
                tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="#F2971010"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:padding="1dp"
                android:elevation="15dp"
                android:text="@string/edit_profile"
                android:textAllCaps="false"
                android:background="@drawable/button_shape"
                android:backgroundTint="#6F0000"
                android:textColor="@color/md_white_1000"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
               />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="John Doe Joe"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/county_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_location"
                android:elegantTextHeight="true"
                android:textColor="#fff"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/county_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#FFF"
                android:clickable="false"
                android:elevation="4dp"
                android:focusable="true"
                android:padding="20dp"
                android:text="@string/previous_donations"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#FFF"
                android:clickable="false"
                android:elevation="4dp"
                android:focusable="true"
                android:padding="20dp"
                android:text="@string/my_appointments"
                android:textSize="20sp"
                />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_book"
        app:backgroundTint="@color/primary_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_add" />
</RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
