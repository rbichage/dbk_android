<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.reuben.donatebloodkenya.ResetPassword">

    <EditText
        android:id="@+id/etemailsend"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="145dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="@string/your_email_addresss"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/b_link"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/etemailsend"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@drawable/button_shape"
        android:text="@string/send_link"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#1b1a1a" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/b_link"
        android:layout_alignEnd="@+id/etemailsend"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="7dp"
        android:text="@string/email_action"
        android:textColor="#000000" />


</RelativeLayout>
